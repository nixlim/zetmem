# A-MEM MCP Server Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
AMEM_ENV=development
AMEM_PORT=8080
AMEM_LOG_LEVEL=info
AMEM_CONFIG_PATH=./config
AMEM_PROMPTS_PATH=./prompts

# LLM API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here // TODO: NOT YET IMPLEMENTED

# ChromaDB Configuration
CHROMADB_HOST=http://localhost:8000
CHROMADB_COLLECTION=amem_memories_dev
CHROMADB_BATCH_SIZE=100

# LiteLLM Configuration
LITELLM_DEFAULT_MODEL=gpt-4.1
LITELLM_MAX_RETRIES=3
LITELLM_TIMEOUT_SECONDS=30
LITELLM_RATE_LIMIT=60

# Embedding Service Configuration
EMBEDDING_SERVICE=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Evolution Configuration
AMEM_EVOLUTION_ENABLED=true
AMEM_EVOLUTION_SCHEDULE="0 2 * * *"
AMEM_EVOLUTION_BATCH_SIZE=50
AMEM_EVOLUTION_WORKER_COUNT=3

# Monitoring Configuration
AMEM_METRICS_PORT=9090
AMEM_METRICS_ENABLED=true
AMEM_TRACING_SAMPLE_RATE=0.1

# Prompt Configuration
AMEM_PROMPTS_CACHE_ENABLED=true
AMEM_PROMPTS_HOT_RELOAD=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# LiteLLM Configuration
LITELLM_MODEL=gpt-3.5-turbo
LITELLM_TEMPERATURE=0.7
LITELLM_MAX_TOKENS=2000
LITELLM_REQUEST_TIMEOUT=30
LITELLM_CACHE_RESPONSES=true

# Memory Configuration
MEMORY_RETENTION_DAYS=30
MEMORY_MAX_ENTRIES_PER_AGENT=10000
MEMORY_CHUNK_SIZE=512
MEMORY_OVERLAP_SIZE=50

# Agent Configuration
AGENT_MAX_CONCURRENT=10
AGENT_DEFAULT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=1

# Security Configuration
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600
API_KEY_HEADER=X-API-Key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
OPENTELEMETRY_ENABLED=false
OPENTELEMETRY_ENDPOINT=http://localhost:4317

# Feature Flags
ENABLE_MEMORY_COMPRESSION=true
ENABLE_MEMORY_ENCRYPTION=false
ENABLE_DISTRIBUTED_MEMORY=false
ENABLE_MEMORY_SEARCH=true
ENABLE_MEMORY_EXPORT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./data/storage
# For S3 storage:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=amem-storage
# AWS_REGION=us-east-1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./data/backups

# Development Tools
SWAGGER_ENABLED=true
GRAPHQL_ENABLED=false
ADMIN_INTERFACE_ENABLED=true